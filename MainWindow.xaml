<Window x:Class="AppUpdater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppUpdater"
        mc:Ignorable="d"
        Title="Обновление приложения" Height="371" Width="355" MinHeight="250" MinWidth="250">
    <Grid>
        <TextBox x:Name="textBox" Margin="10,63" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        <Button x:Name="button" Content="Проверить наличие новой версии" VerticalAlignment="Top" Margin="10,10,10,0" Height="48" Click="button_Click"/>
        <Button x:Name="button_Copy" Content="Обновить" Margin="10,0,10,10" Height="48" VerticalAlignment="Bottom" Click="button_Copy_Click" IsEnabled="False"/>

    </Grid>
</Window>
